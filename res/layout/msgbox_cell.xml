<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <ImageView
        android:layout_width="6dp"
        android:layout_height="60dp"
        android:src = "@color/yellow"
        android:layout_alignParentRight="true"
        android:id="@+id/readnote"
        />
    <ImageView
        android:layout_width="4dp"
        android:layout_height="60dp"
        android:src = "@color/trans"
        android:id="@+id/vacuum"
        android:layout_alignParentRight="true"
        />
        <org.yanweiran.app.MyWidget.RoundImageView
            android:id="@+id/msgHead"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="5dip"
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:layout_alignParentLeft="true"
            imagecontrol:border_inside_color="#fff7f2e9"
            imagecontrol:border_outside_color="#ffd5d1c8"
            imagecontrol:border_thickness="2dip"
            android:src="@drawable/indexicon"
            />
        <ImageView
            android:id="@+id/tag"
            android:src="@drawable/t"
            android:layout_width="wrap_content"
            android:layout_alignBottom="@+id/msgHead"
            android:layout_alignRight="@+id/msgHead"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />
     <org.yanweiran.app.MyWidget.EmojiText
         android:id="@+id/msgLast"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@color/grey"
         android:text="最后一条消息"
         android:gravity="bottom"
         android:layout_alignBottom="@+id/msgHead"
         android:layout_toRightOf="@+id/msgHead"
          android:background="@color/trans"
         />
    <TextView
        android:id="@+id/msgName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="陈小狼老师"
        android:layout_toRightOf="@+id/msgHead"
        android:layout_above="@+id/msgLast"
        android:textSize="18sp"
        android:gravity="center_horizontal"
        />
    <TextView
        android:id="@+id/msgTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/vacuum"
        android:text="13分钟前"
        android:layout_marginRight="5dp"
        android:layout_alignTop="@+id/msgHead"
        />
    <ImageView
        android:id="@+id/unread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/un_read"
        android:layout_toRightOf="@+id/msgName"
        android:layout_marginLeft="14dp"
        android:layout_alignTop="@+id/msgHead"
        android:visibility="gone"
        />
</RelativeLayout>