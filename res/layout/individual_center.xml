<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="org.yanweiran.app.activity.IndividualCenter">
    <!--头部内容 -->
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_height="50dip"
        android:layout_width="fill_parent"
        android:background="@color/title_color"
        >
        <ImageButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="@drawable/write_bg_change"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:text="个人中心"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/white"
            />
    </RelativeLayout>
    <!--中间核心内容 -->


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dip"
                android:id="@+id/head_item"
                android:background="@drawable/class_select"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="头像"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dip"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/more1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="＞"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginRight="20dip"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    />
                <org.yanweiran.app.MyWidget.RoundImageView
                    android:id="@+id/bigHead"
                    android:layout_width="70dip"
                    android:layout_height="70dip"
                    android:src="@drawable/indexicon"
                    android:scaleType="centerCrop"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dip"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/more1"
                    android:layout_marginRight="15dip"
                    imagecontrol:border_inside_color="@color/grey1"
                    imagecontrol:border_outside_color="@color/grey1"
                    imagecontrol:border_thickness="1dp"
                    />
                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/grey1"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="80dip"
                android:background="@drawable/class_select"
                android:id="@+id/modify_name"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="名字"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dip"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/more2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="＞"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginRight="20dip"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    />
                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:textColor="@color/red"
                    android:text="王欣欣的妈妈"
                    android:textSize="18sp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/more2"
                    android:layout_marginRight="18dip"
                    android:layout_height="wrap_content" />
                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/grey1"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/school_num_line"
                    android:layout_width="match_parent"
                    android:layout_height="60dip"

                >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:text="德蒙学号"
                        android:layout_marginLeft="20dp"
                        />
                    <TextView
                        android:id="@+id/tv_school_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/grey"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="55dip"
                        android:text="123456"
                        />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey1"
                >
                <Button
                    android:id="@+id/logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="          退出登录         "
                    android:textSize="18sp"
                    android:textColor="@drawable/loged_text"
                    android:layout_centerInParent="true"
                    android:background="@drawable/center_btn"
                    />
            </RelativeLayout>

</LinearLayout>

