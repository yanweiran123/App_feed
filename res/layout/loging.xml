<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/afterlogin"
    android:background="#E44839"
    >


    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:src="@drawable/logo"
        android:layout_gravity="center"
        android:layout_marginTop="40dip"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="240dip"
        android:layout_height="40dip"
        android:hint="用户名"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:textSize="14dip"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:paddingLeft="5dp"
        android:background="@drawable/log_inupt"
        android:layout_marginTop="20dip"
        />
        <EditText
            android:id="@+id/etPass"
            android:layout_width="240dip"
            android:layout_height="40dip"
            android:selectAllOnFocus="true"
            android:hint="密码"
            android:inputType="textPassword"
            android:singleLine="true"
            android:background="@drawable/log_inupt"
            android:layout_below="@+id/etUsername"
            android:textSize="14dip"
            android:paddingLeft="5dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dip"
        />
    <CheckBox
        android:id="@+id/isTeacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 我是教师"
        android:textSize="15dip"
        android:layout_marginTop="8dip"
        android:paddingLeft="26dp"
        android:layout_below="@+id/etPass"
        android:button="@drawable/log_check"
        android:background="@null"
        android:layout_alignLeft="@+id/etPass"
        />
        <Button
            android:id="@+id/reg"
            android:layout_width="100dip"
            android:layout_height="30dip"
            android:text="注 册"
            android:layout_marginTop="40dip"
            android:layout_below="@+id/isTeacher"
            android:layout_alignLeft="@+id/etPass"
            android:background="@drawable/loged_btn"
            android:textColor="@drawable/loged_text"
            />
        <Button
            android:id="@+id/login"
            android:layout_width="100dip"
            android:layout_height="30dip"
            android:text="登 录"
            android:layout_below="@+id/isTeacher"
            android:layout_alignRight="@+id/etPass"
            android:layout_marginTop="40dp"
            android:background="@drawable/loged_btn"
            android:textColor="@drawable/loged_text"
            />

    <TextView
        android:id="@+id/forgetPs"
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:layout_marginTop="10dip"
        android:text="忘记密码?"
        android:gravity="center"
        android:textColor="@drawable/loged_text"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dip"
        />
        <org.yanweiran.app.MyWidget.RoundImageView
            android:id="@+id/forgetImg"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:scaleType="centerCrop"
            android:src="@drawable/indexicon"
            imagecontrol:border_inside_color="#fff7f2e9"
            imagecontrol:border_outside_color="#ffd5d1c8"
            imagecontrol:border_thickness="1dip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dip"
            android:layout_above="@+id/forgetPs"
            />
    <ImageView
        android:id="@+id/tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/t"
        android:layout_alignBottom="@+id/forgetImg"
        android:layout_alignRight="@+id/forgetImg"

        />

  </RelativeLayout>

