<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1,2"
    android:layout_centerInParent="true"
    android:background="#E44839"
    >
    <ImageButton
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        android:background="@drawable/register_back"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:paddingLeft="16dip"
        android:paddingRight="16dip"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="4dip"
        />
        <LinearLayout
            android:id="@+id/r1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/back"
            android:gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:id="@+id/regTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginLeft="25dip"
                android:textColor="@color/white"
                 />
           <EditText
               android:id="@+id/re_Email"
               android:layout_width="200dp"
               android:layout_height="40dp"
               android:gravity="center_vertical"
               android:textSize="16sp"
               android:paddingLeft="5dp"
               android:background="@drawable/log_inupt"
               />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/r2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/r1"
            android:layout_alignRight="@+id/r1"
            android:gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
        >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pass"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                />
            <EditText
                android:id="@+id/password"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:inputType="textPassword"
                android:textSize="16sp"
                android:paddingLeft="5dp"
                android:background="@drawable/log_inupt"
                />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/r3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r2"
        android:gravity="center_vertical"
        android:layout_centerHorizontal="true"
        android:layout_alignRight="@+id/r2"
        android:layout_marginTop="18dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认密码："
            android:textSize="16sp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            />
        <EditText
            android:id="@+id/confirmPassword"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            android:textSize="16sp"
            android:paddingLeft="5dp"
            android:background="@drawable/log_inupt"
            />
        </LinearLayout>

    <LinearLayout
        android:id="@+id/r4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r3"
        android:gravity="center_vertical"
        android:layout_centerHorizontal="true"
        android:layout_alignRight="@+id/r3"
        android:layout_marginTop="18dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="宝宝姓名："
            android:textSize="16sp"
            android:layout_gravity="center"
            android:textColor="@color/white"

            />
        <EditText
            android:id="@+id/babyName"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:paddingLeft="5dp"
            android:background="@drawable/log_inupt"
            />
    </LinearLayout>
        <Button
            android:id="@+id/submit"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/loged_btn"
            android:textColor="@drawable/home_text_change"
            android:text="@string/reg"
            android:layout_below="@+id/r4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_alignBaseline="@+id/textView"
            android:layout_alignBottom="@+id/textView"
            android:layout_toRightOf="@+id/textView" />

    </RelativeLayout>
