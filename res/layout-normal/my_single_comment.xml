<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/relative_comment"
    android:paddingTop="8dip"
    android:paddingLeft="6dip"
    android:paddingRight="6dip"
    android:paddingBottom="8dip"
    >

        <ImageView
            android:id="@+id/headImg"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:src="@drawable/head_photo"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            />
        <TextView
            android:id="@+id/userName"
            android:layout_toRightOf="@+id/headImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="陈小狼老师"
            android:textColor="@color/red"
            />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text=" 回复 我"
             android:textColor="@color/grey"
             android:layout_toRightOf="@+id/userName"
             />
        <TextView
            android:id="@+id/commentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13分钟前"
            android:textColor="@color/red"
            android:layout_below="@+id/userName"
            android:layout_toRightOf="@+id/headImg"
            android:textSize="10dip"
            />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_below="@id/commentTime"
            android:background="@color/grey"
            android:layout_marginTop="5dip"
            />
        <TextView
            android:id="@+id/commContent"
            android:layout_below="@+id/commentTime"
            android:layout_marginTop="8dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="18dip"
            android:text="闫蔚然 呵呵"
            />
        <TextView
            android:id="@+id/commWhat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/commContent"
            android:layout_marginTop="5dip"
            android:textColor="@color/grey"
            android:background="@drawable/balloon_comment"
            />
</RelativeLayout>