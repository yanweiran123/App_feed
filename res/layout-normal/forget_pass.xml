<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E44839"
    >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:text="请输入注册德蒙网时使用的Email："
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/white"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="3"
            android:orientation="vertical"
            >
            <EditText
                android:id="@+id/input_mail"
                android:layout_width="200dip"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:singleLine="true"
                />
            <TextView
                android:id="@+id/introduce1"
                android:layout_below="@+id/input_mail"
                android:layout_width="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="家长可以在此处找回密码"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/introduce2"
                android:layout_below="@+id/introduce1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="教师找回密码请联系本园德蒙教师管理员。"
                android:textColor="@color/white"

                />
            <Button
                android:id="@+id/submit"
                android:layout_below="@+id/introduce2"
                android:layout_height="50dip"
                android:layout_width="100dip"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dip"
                android:text="提交"
                android:background="@drawable/home_btn_change"
                android:textColor="@drawable/home_text_change"
                android:layout_gravity="center"
                />
        </RelativeLayout>

</LinearLayout>
