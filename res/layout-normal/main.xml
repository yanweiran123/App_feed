<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/afterlogin"
    android:background="#E44839"
    >

    <ImageView
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:src="@drawable/indexicon"
        android:layout_gravity="center"
        android:layout_marginTop="30dip"
        android:layout_marginBottom="30dip"
        />
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="1"
    android:layout_gravity="center"
    android:layout_centerInParent="true"
    >
    <TableRow >
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="10pt"
        android:text="@string/user_name"
        android:layout_marginLeft="10px"
        android:layout_weight="5"
        android:textColor="@color/white"
        />
    <EditText
        android:id="@+id/input_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/input_account"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:layout_marginRight="20px"
        android:layout_weight="15"
        />
    </TableRow>

    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pass"
            android:textSize="10pt"
            android:layout_marginLeft="10px"
            android:layout_weight="5"
            android:textColor="@color/white"
            />
        <EditText
            android:id="@+id/input_ps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:selectAllOnFocus="true"
            android:hint="@string/input_pass"
            android:singleLine="true"
            android:layout_marginRight="20px"
            android:layout_weight="15"
            />
    </TableRow>



</TableLayout>
    <CheckBox
        android:id="@+id/is_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我是教师"
        android:layout_gravity="center"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >
        <Button
            android:id="@+id/reg"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:text="@string/reg"
            android:layout_weight="5"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:background="@drawable/home_btn_change"
            android:textColor="@drawable/home_text_change"
            />
        <Button
            android:id="@+id/login"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:text="登录"
            android:layout_weight="5"
            android:layout_marginTop="10dp"
            android:background="@drawable/home_btn_change"
            android:textColor="@drawable/home_text_change"


            />
    </LinearLayout>

    <TextView
        android:id="@+id/forget_ps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:text="忘记密码?"
        android:background="@drawable/home_btn_change"
        android:gravity="center_horizontal"
        android:textColor="@drawable/home_text_change"
        android:layout_gravity="center"
        />


  </LinearLayout>

