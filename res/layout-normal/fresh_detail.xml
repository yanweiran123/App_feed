<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey1"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:background="@color/red"
        android:layout_weight="1"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新鲜事正文"
            android:textSize="26dip"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="10"
        android:orientation="vertical"
        android:paddingLeft="8dip"
        android:paddingRight="8dip"
        android:paddingTop="5dip"
        android:paddingBottom="8dip"
        >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dip"
                android:paddingRight="8dip"
                android:paddingTop="5dip"
                android:paddingBottom="8dip"
                android:background="@color/white"
                >
                <org.yanweiran.app.myadpter.RoundImageView
                    android:id="@+id/headImg"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:scaleType="centerCrop"
                    android:src="@drawable/head_photo"
                    imagecontrol:border_inside_color="#fff7f2e9"
                    imagecontrol:border_outside_color="#ffd5d1c8"
                    imagecontrol:border_thickness="1dip"
                    />
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  "
                    android:textColor="@color/red"
                    android:textSize="16dip"
                    android:layout_marginLeft="5dip"
                    android:layout_toRightOf="@+id/headImg"
                    />
                <TextView
                    android:id="@+id/newsTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  "
                    android:textColor="@color/red"
                    android:layout_below="@+id/name"
                    android:layout_toRightOf="@+id/headImg"
                    android:layout_marginLeft="5dip"
                    />
                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/red"
                    android:layout_below="@id/headImg"
                    android:layout_marginTop="5dip"
                    />
                <TextView
                    android:id="@+id/textContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_below="@+id/line"
                    android:layout_marginTop="5dip"
                    />
            </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="4dip"
          />
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                >
                <RelativeLayout
                    android:id="@+id/middleTitle"
                    android:layout_width="match_parent"
                    android:layout_height="30dip"
                    android:background="#F6F4F5"
                    >
                    <TextView
                        android:id="@+id/btn_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 评论"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:textColor="@color/red"
                        android:layout_marginLeft="4dip"
                        />
                    <View
                        android:layout_width="1px"
                        android:layout_height="20dip"
                        android:background="@color/grey"
                        android:layout_toRightOf="@+id/btn_comment"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="4dip"
                        />
                    <TextView
                        android:id="@+id/btn_zan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 赞"
                        android:textColor="@color/grey"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dip"
                        />
                    <View
                        android:layout_width="1px"
                        android:layout_height="20dip"
                        android:background="@color/grey"
                        android:layout_toLeftOf="@+id/btn_zan"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="4dip"
                        />
                </RelativeLayout>
                <ListView
                    android:id="@+id/commentList"
                    android:layout_below="@+id/middleTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </RelativeLayout>
    </LinearLayout>
    <include layout="@layout/bottommenu" />
</LinearLayout>