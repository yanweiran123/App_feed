<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey1"
    >
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/title_color"
        >

        <ImageButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="@drawable/write_bg_change"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新鲜事正文"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            />
    </RelativeLayout>
                <ListView
                    android:id="@+id/commentList"
                    android:layout_below="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="8dip"
                    android:paddingRight="8dip"
                    android:paddingTop="5dip"
                    android:layout_marginBottom="50dp"
                    android:divider="@null"
                    android:background="@drawable/detail_comm_list_bg"
                    android:paddingBottom="5dp"
                    android:listSelector="@color/trans"
                    />
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/title_color"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            >
            <Button
                android:id="@+id/comment_btn"
                android:textSize="18sp"
                android:text="评论"
                android:textColor="@color/white"
                android:paddingLeft="40dip"
                android:drawablePadding="-20dip"
                android:layout_width="150dip"
                android:layout_marginLeft="20dip"
                android:background="@drawable/detail_btn_bg"
                android:drawableLeft="@drawable/comment_btn_img"
                android:layout_height="32dip"
                android:layout_centerVertical="true"
                />
            <ImageButton
                android:id="@+id/btn_zan"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:paddingRight="30dip"
                android:layout_width="150dp"
                android:layout_marginLeft="25dip"
                android:background="@drawable/detail_btn_bg"
                android:src="@drawable/heart_btn"
                android:layout_height="32dip"
                android:layout_toRightOf="@+id/comment_btn"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赞"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_alignRight="@+id/btn_zan"
                android:layout_marginRight="40dip"
                />
        </RelativeLayout>
</RelativeLayout>